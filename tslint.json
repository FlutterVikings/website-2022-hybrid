{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-react-a11y"
  ],
  "rules": {
    "prettier": true,
    "no-implicit-dependencies": false,
    "react-a11y-anchors": false,
    "prefer-conditional-expression": false
  },
  "linterOptions": {
    "exclude": ["bin", "**/*.d.ts", "**/*.json"]
  }
}
